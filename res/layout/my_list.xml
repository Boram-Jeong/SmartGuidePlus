<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtNonRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#b9b9c2"
            android:padding="5dp"
            android:text="받은 가이드"
            android:textColor="#ffffff" />

        <ListView
            android:id="@+id/downloadList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtPhone_User"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#b9b9c2"
            android:padding="5dp"
            android:text="내가 만든 가이드"
            android:textColor="#ffffff" />

        <ListView
            android:id="@+id/madeList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtRequest_Row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#b9b9c2"
            android:padding="5dp"
            android:text="내가 등록한 요청"
            android:textColor="#ffffff" />

        <ListView
            android:id="@+id/requsetList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>
    </LinearLayout>

    <Button
        android:id="@+id/btnStartRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7c7e86"
        android:text="가이드 요청하기"
        android:textColor="#ffffff" />

</LinearLayout>